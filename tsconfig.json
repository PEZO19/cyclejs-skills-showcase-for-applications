{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "ES5",
        "types": ["node"],
        "noImplicitReturns": true,
        "strict": true,
        "strictFunctionTypes": false,
        "allowJs": true,
        "lib": ["esnext", "dom"],
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "build"]
}
